// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int           @id @default(autoincrement())
  username        String        @unique
  email           String        @unique
  password        String
  birthDate       String
  image           String?
  currentWeight   Int?
  height          Int?
  basalRate       Int?
  sessions        Session[]
  mealFood        MealFood[]
  meal            Meal[]

  @@map("users")
}

model Session {
  id      Int     @id @default(autoincrement())
  user    User    @relation(fields: [userId], references: [id])
  userId  Int
  token   String  @unique
  
  @@map("sessions")
}

model Food {
  id                  Int     @id @default(autoincrement())
  name                String  @unique
  caloriesPerServing  Int
  carboPorcentage     Int
  proteinPorcentage   Int
  fatPorcentage       Int
  mealFood            MealFood[]
  
  @@map("foods")
}

model Meal {
  id                  Int         @id @default(autoincrement())
  name                String  
  mealFood            MealFood[]
  user                User        @relation(fields: [userId], references: [id])
  userId              Int    

  @@map("meals")
  @@unique([name, userId])
}

model MealFood {
  id                  Int     @id @default(autoincrement())
  user                User    @relation(fields: [userId], references: [id])
  userId              Int
  meal                Meal    @relation(fields: [mealId], references: [id])
  mealId              Int
  food                Food    @relation(fields: [foodId], references: [id])
  foodId              Int
  amount              Int

  @@map("mealFoods")
}